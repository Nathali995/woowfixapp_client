{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "style/*": [ "src/style/*" ],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    // "metro.config.js",
    "jest.config.js"
  ],
  //"include": ["src/**/*", "custom.d.ts"],
}
